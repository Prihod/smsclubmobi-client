{
  "name": "prihod/smsclubmobi-client",
  "description": "PHP client for smsclub.mobi API",
  "keywords": [
    "api-client",
    "smsclub.mobi",
    "API",
    "PHP"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Prihod"
    }
  ],
  "require": {
    "php": ">=7.4",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.0",
    "symfony/deprecation-contracts": "^2.2"
  },
  "autoload": {
    "psr-4": {
      "SMSClubMobi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SMSClubMobi\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "phpcs src tests",
    "fix-style": "phpcbf src tests"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7"
  }
}
